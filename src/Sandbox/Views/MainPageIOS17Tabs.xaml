                                    TintColor="White"
                                    VerticalOptions="Center" />

                                <draw:SkiaLabel
                                    Style="{StaticResource SkiaLabelStyleTabText}"
                                    Text="Settings"
                                    TextColor="White" />

                            </draw:SkiaLayout>

                        </draw:SkiaLayout>

